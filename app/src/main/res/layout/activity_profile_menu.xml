<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202427"
    tools:context=".ui.profileoverlay.ProfileMenuActivity"
    tools:layout_editor_absoluteX="-32dp"
    tools:layout_editor_absoluteY="0dp">

    <!-- ImageView cho ảnh đại diện -->

    <!-- TextView cho lời chào "Hi!" -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="46dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvHi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="Hi!"
        android:textColor="#C82C32"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.517" />

    <!-- TextView cho tên người dùng -->

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/inter_bold"
        android:text="Cu Tien Thinh"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHi"
        app:layout_constraintStart_toEndOf="@+id/tvHi"
        app:layout_constraintTop_toTopOf="@+id/tvHi"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginVertical="8dp"
        android:background="#987851"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btnMyTicket"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_radius_button"
        android:text="My Ticket"
        android:textColor="#6C6C6C"
        android:drawableLeft="@drawable/PNR_Code"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginBottom="412dp"
        android:background="@drawable/border_radius_button"
        android:text="Profile"
        android:textColor="#6C6C6C"
        android:drawableLeft="@drawable/info_i"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:drawablePadding="8dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnSignOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="350dp"
        android:layout_height="34dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_auth"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Sign out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>